extends _layout
block content
  .view.view-main.view-init
    .page
      .navbar
        .navbar-bg
        .navbar-inner.sliding
          .title Page Transitions
      .page-content
        .list.links-list
          ul
            li
              a(href="/page-transitions/f7-circle" data-transition="f7-circle") f7-circle
            li
              a(href="/page-transitions/f7-cover" data-transition="f7-cover") f7-cover
            li
              a(href="/page-transitions/f7-cover-v" data-transition="f7-cover-v") f7-cover-v
            li
              a(href="/page-transitions/f7-dive" data-transition="f7-dive") f7-dive
            li
              a(href="/page-transitions/f7-fade" data-transition="f7-fade") f7-fade
            li
              a(href="/page-transitions/f7-flip" data-transition="f7-flip") f7-flip
            li
              a(href="/page-transitions/f7-parallax" data-transition="f7-parallax") f7-parallax
            li
              a(href="/page-transitions/f7-push" data-transition="f7-push") f7-push

block scripts
  script.
    var app = new Framework7({
      routes: [
        {
          path: '/page-transitions/:effect',
          component: {
            template: `
              <div class="page">
                <div class="navbar">
                  <div class="navbar-bg"></div>
                  <div class="navbar-inner sliding">
                    <div class="left">
                      <a href="#" class="link back">
                        <i class="icon icon-back"></i>
                        <span class="if-not-md">Back</span>
                      </a>
                    </div>
                    <div class="title">{{$f7route.params.effect}}</div>
                  </div>
                </div>
                <div class="page-content">
                  <div class="block block-strong text-align-center">
                    <p>This page was loaded with <b>{{$f7route.params.effect}}</b> transition.</p>
                  </div>
                </div>
              </div>
            `,
          },
        },
      ]
    });
