  script.
    var $$ = Dom7;

    var static = Template7.compile($$('#static').html());
    var fixed = Template7.compile($$('#fixed').html());
    var large = Template7.compile($$('#large').html());
    var api = Template7.compile($$('#api').html());
    var hideOnScroll = Template7.compile($$('#hide-on-scroll').html());

    var app = new Framework7({
      routes: [
        {
          path: '/static/',
          template: static,
        },
        {
          path: '/fixed/',
          template: fixed,
        },
        {
          path: '/large/',
          template: large,
        },
        {
          path: '/api/',
          template: api,
          on: {
            pageInit: function (e, page) {
              var navbarEl = app.navbar.getElByPage(page);

              page.$el.find('.hide-navbar').on('click', function () {
                app.navbar.hide(navbarEl);
              });
              page.$el.find('.show-navbar').on('click', function () {
                app.navbar.show(navbarEl);
              });
            }
          }
        },
        {
          path: '/hide-on-scroll/',
          template: hideOnScroll,
        },
      ]
    });
