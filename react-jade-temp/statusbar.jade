extends ../src/jade/_internal-template

block vars
  - var activeLink = 'react';
  - var title = 'Status Bar React Component | Framework7 React Documentation';

block content
  .docs-wrap
    .docs-nav
      include ./_docs-react-menu
    .docs-content
      h1 Status Bar React Component
      p Status Bar React component represents <a href="../docs/status-bar.html">Status bar overlay</a> in Framework7.
      h2 Usage example
      pre
        code
          | &lt;div id="app"&gt;
          |   &lt;!-- Should be placed as the first child in the app root --&gt;
          |   &lt;StatusBar&gt;&lt;/StatusBar&gt;
          |   ...
          | &lt;/div&gt;
      p Renders to:
      pre
        code
          | &lt;div id="app"&gt;
          |   &lt;div class="statusbar-overlay"&gt;&lt;/div&gt;
          |   ...
          | &lt;/div&gt;
      h2 Properties
      table.params-table
        thead
          tr
            th Prop
            th Type
            th Default
            th Description
        tbody
          tr
            td side
            td string
            td 
            td Panel side. Could be "left" or "right"
          tr
            td left
            td boolean
            td 
            td Shortcut prop for <code>side="left"</code>
          tr
            td right
            td boolean
            td 
            td Shortcut prop for <code>side="right"</code>
          tr
            td effect
            td string
            td 
            td Panel effect. Could be "cover" or "reveal"
          tr
            td cover
            td boolean
            td 
            td Shortcut prop for <code>effect="cover"</code>
          tr
            td reveal
            td boolean
            td 
            td Shortcut prop for <code>effect="reveal"</code>
          tr
            td theme
            td string
            td 
            td Panel theme color. One of <a href="../docs/color-themes.html">default colors</a>
          tr
            td layout
            td string
            td 
            td Panel layout theme. One of <a href="../docs/color-themes.html#layout-themes">default layout themes</a>
          tr
            td opened
            td boolean
            td 
            td Allows to open/close panel and set its initial state
      h2 Event Properties
      table.events-table
        thead
          tr
            th Event
            th Description
        tbody
          tr
            td panel:open
            td Event will be triggered when Panel starts its opening animation
          tr
            td panel:opened
            td Event will be triggered after Panel completes its opening animation
          tr
            td panel:close
            td Event will be triggered when Panel starts its closing animation
          tr
            td panel:closed
            td Event will be triggered after Panel completes its closing animation