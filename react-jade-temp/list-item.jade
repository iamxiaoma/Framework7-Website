extends ../src/jade/_internal-template

block vars
  - var activeLink = 'react';
  - var title = 'List Item React Component | Framework7 React Documentation';

block content
  .docs-wrap
    .docs-nav
      include ./_docs-react-menu
    .docs-content
      h1 List Item React Component
      h2 Usage examples
      h4 Minimal Layout
      pre
        code
          :code
            <List>
              <ListItem title="Item 1"></ListItem>
              <ListItem title="Item 2"></ListItem>
            </List>
      p Renders to:
      pre
        code
          :code
            <div class="list-block">
              <ul>
                <li class="item-content">
                  <div class="item-inner">
                    <div class="item-title">Item 1</div>
                  </div>
                </li>
                <li class="item-content">
                  <div class="item-inner">
                    <div class="item-title">Item 2</div>
                  </div>
                </li>
              </ul>
            </div>

      h4 With Badges And Divider
      pre
        code
          :code
            <List>
              <ListItem title="Item 1" badge="5" badgeColor="red"></ListItem>
              <ListItem title="Item 2" badge="3" badgeColor="red"></ListItem>
              <ListItem title="Items Divider" divider></ListItem>
              <ListItem title="Item 3"></ListItem>
              ...
            </List>
      p Renders to:
      pre
        code
          :code
            <div class="list-block">
              <ul>
                <li class="item-content">
                  <div class="item-inner">
                    <div class="item-title">Item 1</div>
                    <div class="item-after">
                      <span class="badge bg-red">5</span>
                    </div>
                  </div>
                </li>
                <li class="item-content">
                  <div class="item-inner">
                    <div class="item-title">Item 2</div>
                    <div class="item-after">
                      <span class="badge bg-red">3</span>
                    </div>
                  </div>
                </li>
                <li class="item-divider"><span>Items Divider</span></li>
                <li class="item-content">
                  <div class="item-inner">
                    <div class="item-title">Item 3</div>
                  </div>
                </li>
              </ul>
            </div>
      h4 Links Items
      pre
        code
          :code
            <List>
              <ListItem link="/about/" title="About"></ListItem>
              <ListItem link="/contacts/" title="Contacts"></ListItem>
            </List>
      p Renders to:
      pre
        code
          :code
            <div class="list-block">
              <ul>
                <li>
                  <a href="/about/" class="item-link">
                    <div class="item-content">
                      <div class="item-inner">
                        <div class="item-title">About</div>
                      </div>
                    </div>
                  </a>
                </li>
                <li>
                  <a href="/contacts/" class="item-link">
                    <div class="item-content">
                      <div class="item-inner">
                        <div class="item-title">Contacts</div>
                      </div>
                    </div>
                  </a>
                </li>
              </ul>
            </div>
      h4 Media List Items
      pre
        code
          :code
            <List mediaList>
              <ListItem
                link="/item/"
                media="<img src='image.jpg'>"
                title="Item Title"
                subtitle="Item Subtitle"
                text="Some text"
                after="Read more"
              ></ListItem>
            </List>
      p Renders to:
      pre
        code
          :code
            <div class="list-block media-list">
              <ul>
                <li>
                  <a href="/item/" class="item-link">
                    <div class="item-content">
                      <div class="item-media">
                        <img src='image.jpg'>
                      </div>
                      <div class="item-inner">
                        <div class="item-title-row">
                          <div class="item-title">Item Title</div>
                          <div class="item-after">Read more</div>
                        </div>
                        <div class="item-subtitle">Item Subtitle</div>
                        <div class="item-text">Some text</div>
                      </div>
                    </div>
                  </a>
                </li>
              </ul>
            </div>
      h2 Slot Properties
      p List Item React component (&lt;ListItem&gt;) has additional slot properties for custom elements:
      ul
        li <b>rootStartSlot</b> - element will be inserted in the beginning of &lt;li&gt; element
        li <b>rootSlot</b> - element will be inserted in the end of &lt;li&gt; element
        li <b>contentStartSlot</b> - element will be inserted in the beginning of &lt;div class="item-content"&gt; element
        li <b>contentSlot</b> - element will be inserted in the end of &lt;div class="item-content"&gt; element
        li <b>mediaStartSlot</b> - element will be inserted in the beginning of &lt;div class="item-media"&gt; element
        li <b>mediaSlot</b> - element will be inserted in the end of &lt;div class="item-media"&gt; element
        li <b>innerStartSlot</b> - element will be inserted in the beginning of &lt;div class="item-inner"&gt; element
        li <b>innerSlot</b> - element will be inserted in the end of &lt;div class="item-inner"&gt; element
      pre
        code
          :code
            <List mediaList>
              <ListItem
                link="/home/"
                media="<img src='image.jpg'>"
                title="Item Title"
                subtitle="Item Subtitle"
                text="Text"
                after="Read more"

                rootStartSlot={<div>Root Start</div>}
                rootSlot={<div>Root</div>}
                contentStartSlot={<div>Content Start</div>}
                contentSlot={<div>Content</div>}
                mediaStartSlot={<div>Media Start</div>}
                mediaSlot={<div>Media</div>}
                afterStartSlot={<span>After Start</span>}
                afterSlot={<span>After</span>}
                innerStartSlot={<div>Inner Start</div>}
                innerSlot={<div>Inner</div>}
              >
              </ListItem>
            </List>
      p Renders to:
      pre
        code
          :code
            <div class="list-block media-list">
              <ul>
                <li>
                  <div>Root Start</div>
                  <a href="/home/" class="item-link">
                    <div class="item-content">
                      <div>Content Start</div>
                      <div class="item-media">
                        <div>Media Start</div>
                        <img src="image.jpg">
                        <div>Media</div>
                      </div>
                      <div class="item-inner">
                        <div>Inner Start</div>
                        <div class="item-title-row">
                          <div class="item-title">Item Title</div>
                          <div class="item-after">
                            <span>After Start</span>
                            <span>Read more</span>
                            <span>After</span>
                          </div>
                        </div>
                        <div class="item-subtitle">Item Subtitle</div>
                        <div class="item-text">Text</div>
                        <div>Inner</div>
                      </div>
                      <div>Content</div>
                    </div>
                  </a>
                  <div>Root</div>
                </li>
              </ul>
            </div>
      h2 Properties
