      table.params-table
        thead
          tr
            th Prop
            th Type
            th Default
            th Description
        tbody
          tr
            th(colspan="4") &lt;Actions&gt; properties
          tr
            td opened
            td boolean
            td 
            td Allows to open/close Action Sheet and set its initial state
          tr
            th(colspan="4") &lt;ActionsLabel&gt; properties
          tr
